{
  "name": "ramajan",
  "version": "1.0.0",
  "description": "Minimalistic mathematical approximation evaluator with ASCII vibes",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server.js",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "math-expression-evaluator": "^1.4.0",
    "mathjs": "^11.11.0",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "mathematics",
    "approximation",
    "ramanujan",
    "ascii",
    "minimalistic"
  ],
  "author": "Ramajan Team",
  "license": "MIT"
}
